{
  "name": "gulp-yaml-update",
  "version": "1.0.1",
  "description": "A gulp plugin for updating fields in yaml documents.",
  "main": "src/index.js",
  "scripts": {
    "lint": "gulp lint",
    "test": "nyc mocha ./test/**/*.spec.js --reporter mocha-multi-reporters --reporter-options configFile=mocha-config.json && nyc report --reporter=text-lcov > /dev/null",
    "report-coverage": "nyc mocha ./test/**/*.spec.js --reporter mocha-multi-reporters --reporter-options configFile=mocha-config.json && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 85,
    "statements": 85,
    "functions": 75,
    "branches": 82,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.spec.js"
    ],
    "reporter": [
      "lcov",
      "cobertura"
    ],
    "cache": true,
    "all": true,
    "report-dir": "./coverage",
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ocrosby/gulp-yaml-update.git"
  },
  "keywords": [
    "gulpplugin",
    "yaml",
    "update"
  ],
  "author": {
    "name": "Omar Crosby",
    "url": "https://github.com/ocrosby"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ocrosby/gulp-yaml-update/issues"
  },
  "homepage": "https://github.com/ocrosby/gulp-yaml-update#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-arrays": "^2.0.0",
    "chai-string": "^1.4.0",
    "coveralls": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-jshint": "^2.1.0",
    "gulp-jsonlint": "^1.2.1",
    "jshint": "^2.9.5",
    "jshint-checkstyle-file-reporter": "0.0.1",
    "merge-stream": "^1.0.1",
    "mocha": "^5.1.0",
    "mocha-junit-reporter": "^1.17.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^11.6.0",
    "run-sequence": "^2.2.1",
    "sinon": "^4.5.0"
  },
  "dependencies": {
    "plugin-error": "^1.0.1",
    "through2": "^2.0.3"
  }
}
